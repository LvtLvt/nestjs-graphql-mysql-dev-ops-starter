{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'"
  },
  "dependencies": {
    "@nestjs/common": "7.0.11",
    "@nestjs/core": "7.0.11",
    "@nestjs/graphql": "7.3.7",
    "@nestjs/platform-express": "7.0.11",
    "@nestjs/sequelize": "0.1.0",
    "apollo-server": "2.14.2",
    "apollo-server-express": "2.14.2",
    "class-transformer": "0.2.3",
    "class-validator": "0.12.2",
    "graphql": "14.6.0",
    "graphql-subscriptions": "1.1.0",
    "mysql2": "2.1.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "sequelize": "5.21.8",
    "sequelize-typescript": "1.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "7.1.5",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.0.11",
    "@types/express": "4.17.6",
    "@types/node": "12.12.31",
    "@types/sequelize": "4.28.8",
    "@types/supertest": "2.0.9",
    "@types/ws": "7.2.4",
    "@typescript-eslint/eslint-plugin": "3.0.0",
    "@typescript-eslint/parser": "3.0.0",
    "commitizen": "^4.1.2",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "husky": "^4.2.5",
    "jest": "26.0.1",
    "jest-html-reporter": "^3.1.3",
    "jest-junit": "^11.0.1",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "supertest": "4.0.2",
    "ts-jest": "26.0.0",
    "ts-loader": "7.0.4",
    "ts-node": "8.10.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "overrides": [
      {
        "files": [
          "src/**/*.ts"
        ],
        "excludedFiles": "*.js"
      }
    ],
    "rules": {
      "@typescript-eslint/interface-name-prefix": "off",
      "@typescript-eslint/explicit-function-return-type": 1,
      "@typescript-eslint/no-explicit-any": 1
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/assets/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test/results",
          "outputName": "report.xml"
        }
      ],
      [
        "jest-html-reporter",
        {
          "pageTitle": "Test Report",
          "outputPath": "test/results/report.html"
        }
      ]
    ],
    "coverageReporters": [
      "lcovonly",
      "html",
      "text"
    ],
    "coverageDirectory": "test/coverage",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npx pretty-quick --staged && npx jest --passWithNoTests",
      "pre-push": "npm run build"
    }
  }
}
